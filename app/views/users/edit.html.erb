<h1 align="center">edit <%= @user.username %> user</h1>

<% if logged_in? %>
	<% if @user.errors.any? %>
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">
				<div class="panel panel-danger">
					<div class="panel-heading">
						<h2 class="panel-title">
							<%= pluralize(@user.errors.count, "error") %>
							Prevent Article From Being Create:
						</h2>
						<div class="panel-body">
							<ul>
								<% @user.errors.full_messages.each do |msg| %>
									<li><%= msg %></li>
								<% end %>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	<%end%>
<%end%>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@user, :html => {class: 'form-horizontal', role: 'form'}) do |u| %>
			<div class="form-group">
				<div class="control-lable col-sm-2">
					<%= u.label :username %>
				</div>
				<div class="col-sm-6">
					<%= u.text_field :username, class: 'form-control', placeholder: 'Username', autofoucs: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-lable col-sm-2">
					<%= u.label :email %>
				</div>	
				<div class="col-sm-6">
					<%= u.email_field :email, class: 'form-control', placeholder: 'Email', autofoucs: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-lable col-sm-2">
					<%= u.label :password %>
				</div>
				<div class="col-sm-6">
					<%= u.password_field :password,class: 'form-control',							placeholder: 'Password', autofoucs: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-6">
					<%= u.submit 'Update Info', class: 'btn btn-primary ptn-large' %>
				</div>
			</div>
		<%end%>
	</div>
</div>
