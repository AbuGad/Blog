<h1 align="center">Login</h1>


<div class="row">
	<div class="col-xs-12">
		<%= form_for :session, url: login_path,
			:html => {class: 'form-horizontal', role: 'form'} do |u| %>
			<div class="form-group">
				<div class="control-lable col-sm-2">
					<%= u.label :email %>
				</div>
				<div class="col-sm-2">
					<%= u.email_field :email %>
				</div>
			</div>
			<div class="form-group">
				<div class=" control-lable col-sm-2">
					<%= u.label :password %>
				</div>
				<div class="col-sm-6">
					<%= u.password_field :password %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-6">
					<%= u.submit 'login' %>	
				</div>
			</div>
		<%end%>
	</div>
</div>